<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/musicButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAFAFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <Button
        android:id="@+id/circleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="30dp"
        android:layout_y="27dp"
        android:onClick="circleButtonClick"
        android:text="круг" />

    <Button
        android:id="@+id/rectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="139dp"
        android:layout_y="26dp"
        android:onClick="rectButtonClick"
        android:text="квадрат" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="283dp"
        android:layout_height="433dp"
        android:layout_x="75dp"
        android:layout_y="177dp"
        android:onClick="nextClick" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="280dp"
        android:layout_y="26dp"
        android:backgroundTint="#D9F9FE"
        android:onClick="musicGoButton"
        app:srcCompat="@drawable/start" />

</AbsoluteLayout>