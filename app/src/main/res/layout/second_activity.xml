<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAFAFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <TextView
        android:id="@+id/userNameText2"
        android:layout_width="191dp"
        android:layout_height="52dp"
        android:layout_x="208dp"
        android:layout_y="11dp"
        android:text="Имя пользователя:"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/searchText"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_x="23dp"
        android:layout_y="106dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <Button
        android:id="@+id/searchButton2"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_x="29dp"
        android:layout_y="174dp"
        android:backgroundTint="#7E8FE5"
        android:onClick="addSearchButton"
        android:text="Добавить"
        android:textColor="#E9F554"
        android:textSize="10sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_x="154dp"
        android:layout_y="176dp"
        android:backgroundTint="#7E8FE5"
        android:onClick="deleteSearchButton"
        android:text="Удалить"
        android:textColor="#E9F554"
        android:textSize="10sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/searchButton4"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_x="281dp"
        android:layout_y="174dp"
        android:backgroundTint="#7E8FE5"
        android:onClick="redactSearchButton"
        android:text="Редактировать"
        android:textColor="#E9F554"
        android:textSize="10sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="350dp"
        android:layout_height="431dp"
        android:layout_x="23dp"
        android:layout_y="253dp" />
</AbsoluteLayout>